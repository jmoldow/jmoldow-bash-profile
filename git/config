  sort = -committerdate
[tag]
  sort = version:refname
[core]
  editor = /usr/bin/vim
  pager = "less -FRXISM"
  fsmonitor = false
  untrackedcache = false
  commentChar = auto
[interactive]
  diffFilter = "delta --color-only"
[commit]
  cleanup = scissors
[grep]
  lineNumber = true
  extendedRegexp = true
[log]
  decorate = full
[pager]
  status = "delta --pager='less -FRXISM'"
  diff = "delta --pager='less -FRXISM'"
  grep = true
  log = "delta --pager='less -FRXISM'"
  show = "delta --pager='less -FRXISM'"
  branch = true
  describe = true
  notes = true
  range-diff = "delta --pager='less -FRXISM'"
  shortlog = true
  add = false
  stash = false
  rebase = false
