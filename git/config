  interactive = auto
  ui = auto
[core]
	editor = /usr/bin/vim
	pager = less -R
	fsmonitor = false
	untrackedcache = false
	commentChar = auto
[commit]
	cleanup = scissors
[grep]
	lineNumber = true
[log]
	decorate = full
[pager]
	status = true
	diff = true
	grep = true
	log = true
[fetch]
  prune = true
[init]
	defaultBranch = main
[push]
  default = simple
[rebase]
  autostash = true
  autosquash = true
[alias]
  clean-nffdx   = clean -nffdx
  log-decorate  = log --decorate=full
  log-graph     = log-decorate --oneline --graph
  log-all       = log-graph --all
  log-jordan            = log-decorate --author=jordan --author=Jordan --author=jmoldow --author=Moldow
  log-jordan-graph      = log-jordan --oneline --graph
  log-jordan-all        = log-jordan        --all
  log-jordan-graph-all  = log-jordan-graph  --all
  log-all-jordan    = log-jordan-graph-all
  log-graph-jordan  = log-jordan-graph
  ignore = update-index --assume-unchanged
  amend        = commit --amend --reset-author -e
  commit-amend = commit --amend --reset-author -e
  wip-amend    = commit --amend --reset-author -e --no-verify
  wip          = commit                           --no-verify -m wip
[gc]
  auto = 500
  pruneexpire = 1.weeks.ago
  reflogexpire = 21 days
  reflogexpireunreachable = 21 days
  aggressiveDepth = 20
  aggressiveWindow = 100
[feature]
  manyFiles = false

[diff "scala"]
  xfuncname = "^(\\\\(sub)*section\\{.*)$"

[diff "jmoldowtxt"]
  wordRegex = "[-a-zA-Z0-9']+|[^ a-zA-Z]"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
