{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "0",
    "CLAUDE_ENABLE_TELEMETRY": "0",
    "ENABLE_TELEMETRY": "0",
    "CLAUDE_CODE_DISABLE_TELEMETRY": "1",
    "CLAUDE_DISABLE_TELEMETRY": "1",
    "DISABLE_TELEMETRY": "1",
    "CLAUDE_CODE_DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_DISABLE_FEEDBACK_SURVEY": "1",
    "DISABLE_FEEDBACK_SURVEY": "1",
    "CLAUDE_CODE_DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_DISABLE_ERROR_REPORTING": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "CLAUDE_CODE_ENABLE_ERROR_REPORTING": "0",
    "CLAUDE_ENABLE_ERROR_REPORTING": "0",
    "ENABLE_ERROR_REPORTING": "0"
  },
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Read(~/.config/**)",
      "Read(~/.claude/**)",
      "Read(~/.bash_profile)",
      "Read(~/.bash_profile_gitignore)",
      "Read(~/.bashrc)",
      "Read(~/.gitconfig)",
      "Read(~/.inputrc)",
      "Read(~/.lesskey)",
      "Read(~/.profile)",
      "Read(~/.vimrc)",
      "Bash(jira issue view:*)",
      "Bash(pants check:*)",
      "Bash(pants lint:*)",
      "Bash(pants fix:*)",
      "Bash(pants fmt:*)",
      "Bash(pants tailor:*)",
      "Bash(pants test:*)",
      "Bash(pants --no-dynamic-ui check:*)",
      "Bash(pants --no-dynamic-ui lint:*)",
      "Bash(pants --no-dynamic-ui fix:*)",
      "Bash(pants --no-dynamic-ui fmt:*)",
      "Bash(pants --no-dynamic-ui tailor:*)",
      "Bash(pants --no-dynamic-ui test:*)",
      "Bash(rg:*)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Read(.envrc)",
      "Read(./.env)",
      "Read(./.env*)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)",
      "Read(~/.aws/**)",
      "Read(~/.config/aws/**)",
      "Read(~/.config/argocd/**)",
      "Read(~/.config/graphite/user_config)",
      "Read(~/.config/iterm2/**)",
      "Read(~/.config/pip/**)",
      "Read(~/.config/uv/**)",
      "Read(~/*history*)",
      "Read(~/.*history*)",
      "Read(~/*hsts*)",
      "Read(~/.*hsts*)",
      "Read(~/*session*)",
      "Read(~/.*session*)",
      "Read(~/.cache/**)",
      "Read(~/.local/**)",
      "Read(~/.docker/**)",
      "Read(~/.config/docker/**)",
      "Read(~/.ecr/**)",
      "Read(~/.config/ecr/**)",
      "Read(~/.k8s/**)",
      "Read(~/.config/k8s/**)",
      "Read(~/.git-credentials)",
      "Read(~/.config/git/credentials)",
      "Read(~/.config/git-credentials)",
      "Read(~/.netrc)",
      "Read(~/.config/netrc)",
      "Read(~/.pex/**)",
      "Read(~/.config/pex/**)"
    ]
  },
  "enabledPlugins": {},
  "extraKnownMarketplaces": {},
  "sandbox": {
    "network": {
      "allowedDomains": [],
      "allowUnixSockets": [
        "/var/run/docker.sock"
      ],
      "allowAllUnixSockets": false,
      "allowLocalBinding": false,
      "enableWeakerNestedSandbox": false
    },
    "excludedCommands": [
      "docker",
      "git"
    ],
    "autoAllowBashIfSandboxed": false,
    "allowUnsandboxedCommands": false,
    "enabled": true
  },
  "alwaysThinkingEnabled": false,
  "statusLine": {
    "type": "command",
    "command": "bash /Users/jordan/.claude/statusline-command.sh"
  }
}
